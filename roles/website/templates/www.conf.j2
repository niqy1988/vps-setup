server {
  listen	80;
  listen	[::]:80;
 
  server_name	{{ website_server_names|join(' ') }};  
  
  return	301 https://$server_name$request_uri;
}

server {
  listen 443 ssl http2;

  server_name {{ website_server_names|join(' ') }};

  ssl_certificate       /etc/nginx/certs/{{ website_ssl_certificate }};
  ssl_certificate_key   /etc/nginx/certs/{{ website_ssl_certificate_key }};

  ssl_stapling on;
  ssl_stapling_verify on;

  port_in_redirect off;
  client_max_body_size 64M;

  # Locations
  include conf.d/{{ website_domain_name }}/*.conf;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name www.{{ item }};

  ssl_certificate       /etc/nginx/certs/{{ item }}_ecc/fullchain.cer;
  ssl_certificate_key   /etc/nginx/certs/{{ item }}_ecc/{{ item }}.key;

  ssl_stapling on;
  ssl_stapling_verify on;

  port_in_redirect off;
  client_max_body_size 64M;

  # Locations
  include /etc/nginx/conf.d/{{ item }}/www/*.conf;
}
